@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<div class="page">
    <main>
    <NavMenu />
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("navbarScroll.init");
        }
    }
}